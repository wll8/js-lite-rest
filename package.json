{
  "name": "js-lite-rest",
  "version": "0.0.3",
  "description": "纯前端 RESTful 风格增删改查。",
  "type": "module",
  "main": "dist/js-lite-rest.cjs",
  "module": "dist/js-lite-rest.mjs",
  "browser": "dist/js-lite-rest.browser.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "import": "./dist/js-lite-rest.browser.mjs",
        "require": "./dist/js-lite-rest.cjs"
      },
      "import": "./dist/js-lite-rest.mjs",
      "require": "./dist/js-lite-rest.cjs",
      "default": "./dist/js-lite-rest.mjs"
    },
    "./browser": {
      "types": "./dist/index.d.ts",
      "import": "./dist/js-lite-rest.browser.mjs",
      "require": "./dist/js-lite-rest.cjs",
      "default": "./dist/js-lite-rest.browser.mjs"
    },
    "./node": {
      "types": "./dist/index.d.ts",
      "import": "./dist/js-lite-rest.mjs",
      "require": "./dist/js-lite-rest.cjs",
      "default": "./dist/js-lite-rest.mjs"
    },
    "./umd": "./dist/js-lite-rest.umd.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "cross-env NODE_OPTIONS=\"--import tsx/esm\" mocha test/test.js",
    "test:dev": "cross-env NODE_OPTIONS=\"--import tsx/esm\" mocha test/test.js --",
    "test:dev:browser": "cross-env NODE_OPTIONS=\"--import tsx/esm\" mocha test/test.js -- dev browser",
    "test:build": "pnpm build && cross-env NODE_OPTIONS=\"--import tsx/esm\" mocha test/test.js -- build",
    "test:build:browser": "pnpm build && cross-env NODE_OPTIONS=\"--import tsx/esm\" mocha test/test.js -- build browser",
    "build": "rollup -c",
    "build:types": "echo \"Types are generated automatically by rollup build\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build && pnpm test:build",
    "prepack": "pnpm build",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "json",
    "store",
    "localStorage",
    "nodejs",
    "browser",
    "restful",
    "database",
    "json-server",
    "lightweight",
    "client-side",
    "data-storage"
  ],
  "author": "xw <xwdaysme@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wll8/js-lite-rest.git"
  },
  "homepage": "https://github.com/wll8/js-lite-rest#readme",
  "bugs": {
    "url": "https://github.com/wll8/js-lite-rest/issues"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.27.3",
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.3.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@rollup/rollup-win32-x64-msvc": "^4.44.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.3.0",
    "chai": "^4.5.0",
    "chai-as-promised": "^8.0.1",
    "cross-env": "^10.0.0",
    "jsdom": "^26.1.0",
    "localforage": "^1.10.0",
    "mocha": "^10.8.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.4.1",
    "rollup": "^4.44.2",
    "rollup-plugin-polyfill-node": "^0.13.0",
    "ts-node": "^10.9.2",
    "tslib": "^2.8.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitepress": "^1.0.0"
  }
}